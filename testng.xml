<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="shopinWebsite_Test_Suite" preserve-order="true" parallel="classes" thread-count="2">


    <!--  test groups -->
    <groups>
        <run>
            <include name="SMOKETEST"/>
            <exclude name="OMITIR"/>
        </run>
    </groups>

    <!--  test listeners -->

    <!--  suite parameters -->
    <parameter name="environment" value="local"/>
    <parameter name="platform" value="Windows 10"/>

<!-- Test Chrome -->
    <test name="Load Home Page Chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="testObjects.HomeTest"/>
        </classes>
    </test>

    <test name="Test signin with chrome">
        <parameter name="includePattern" value=""/>
